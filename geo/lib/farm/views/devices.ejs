<script>
    function showInfo(udid) {
        var res = $('#dvDemoResults');
        $.ajax({
            type: "GET",
            url: "/farms/",
            dateType: 'json',
            data: {udid: udid},
            success: function (data, textStatus, jqXHR) {
                res.html(JSON.stringify(data, null, 4));
            },
            error: function (jqXHR, textStatus, errorThrown) {
                res.html(textStatus + ":" + errorThrown);
            },
            complete: function () {
                res.show()
            }
        });
        $('#myModal').modal('show');
    }
</script>
<ul class="nav nav-tabs">
    <li><a href="/geo">Sessions</a></li>
    <li><a href="/geo/apps">Apps</a></li>
    <li class="active"><a href="/farms">Farms</a></li>
</ul>
<div class="container-fluid">
    <br/>
    <!-- Modal -->
    <div class="modal fade" id="myModal" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Device Info</h4>
                </div>
                <div class="modal-body">
                    <pre id="dvDemoResults" style="display: none; padding:4px; margin:2px;"></pre>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-primary" onclick="">Grab Screenshot</button>
                </div>
            </div>

        </div>
    </div>
    <div class="row">
        <div class="col-sm-12 col-md-12 main">
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>UDID</th>
                            <th>Platform</th>
                            <th>Status</th>
                            <th>...</th>
                        </tr>
                    </thead>
                    <tbody><%- devices.length || "<tr><td colspan=4>No devices plugged into this Farm!</td></tr>" %>
                        <% devices.forEach(function(device) { %>
                            <tr>
                                <td><a href='#' onclick="return showInfo('<%=device.udid%>')"><%=device.udid%></a></td>
                                <td><%=device.platform%></td>
                                <td><span class="label label-success">Plugged In</span></td>
                                <td></td>
                            </tr>
                            <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>
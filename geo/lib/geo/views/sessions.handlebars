<script>
    
    function activateSession(sid) {
       $.ajax({
            type: "POST",
            url: '/geo/session/activate',
            dateType: 'json',
            data: {sid: sid},
            success: function (data, textStatus, jqXHR) {
               location.reload();
            },
            error: function (jqXHR, textStatus, errorThrown) {
                alert(errorThrown);
            },
            complete: function () {
                
            }
        });
        return false;
    }
    
    function deleteSession(sid) {
        $.ajax({
            type: "DELETE",
            url: '/geo/session',
            dateType: 'json',
            data: {sid: sid},
            success: function (data, textStatus, jqXHR) {
               location.reload();
            },
            error: function (jqXHR, textStatus, errorThrown) {
                alert(errorThrown);
            },
            complete: function () {
                
            }
        });
        return false;
    }
    
    function createSession() {
        var txt = $('#session-name');
        var val = txt.val();
        if (val && val != "") {
            doApiCall('/geo/session', {name: val, appName: $('#session-app').val()});
        }
        return false;
    }

    function doApiCall(path, _data) {
        var res = $('#dvDemoResults');
        $.ajax({
            type: "POST",
            url: path,
            dateType: 'json',
            data: _data,
            success: function (data, textStatus, jqXHR) {
                res.html(JSON.stringify(data, null, 4));
                window.location='/geo/actions?sid='+data;
            },
            error: function (jqXHR, textStatus, errorThrown) {
                res.html(textStatus + ":" + errorThrown);
            },
            complete: function () {
                res.show()
            }
        });
    }
</script>

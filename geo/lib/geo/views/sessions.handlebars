    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12 col-md-12 main">
                <h1 class="page-header">Sessions</h1>
                <button type="button" class="btn btn-info" data-toggle="modal" data-target="#myModal">New Session</button>
                <!-- Modal -->
                <div class="modal fade" id="myModal" role="dialog">
                    <div class="modal-dialog">

                        <!-- Modal content-->
                        <div class="modal-content">
                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal">&times;</button>
                                <h4 class="modal-title">New Session</h4>
                            </div>
                            <div class="modal-body">
                                <form>
                                    <div class="form-group">
                                        <label for="session-name" class="control-label">Name:</label>
                                        <input type="text" class="form-control" id="session-name">
                                    </div>
                                    <div class="form-group">
                                        <label for="session-app" class="control-label">App:</label>
                                        <input type="text" id="session-app" class="form-control" value="Jamba Juice"  disabled/>
                                    </div>
                                </form>
                                <pre id="dvDemoResults" style="display: none; padding:4px; margin:2px;"></pre>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                                <button type="button" class="btn btn-primary" onclick="return createSession();">Start</button>
                            </div>
                        </div>

                    </div>
                </div>
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>App</th>
                                <th>Created At</th>
                                <th>...</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#sessions}}
                            <tr>
                                <td><a href="/geo/actions?sid={{_id}}">{{name}}</a> {{#if active}}<span class="label  label-danger">Active</span> {{/if}}</td>
                                <td>{{appName}}</td>
                                <td>{{createdAt}}</td>
                                <td>
                                    {{#unless active}}<button onclick="return activateSession('{{_id}}')">Activate</button>{{/unless}}
                                    <button onclick="return deleteSession('{{_id}}')">Delete</button>
                                </td>
                            </tr>
                            {{/sessions}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>


    </div>

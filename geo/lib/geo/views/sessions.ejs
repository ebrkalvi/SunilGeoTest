<script>
    function activateSession(sid) {
        $.ajax({
            type: "POST",
            url: '/geo/session/activate',
            dateType: 'json',
            data: {
                sid: sid
            },
            success: function (data, textStatus, jqXHR) {
                location.reload();
            },
            error: function (jqXHR, textStatus, errorThrown) {
                alert(errorThrown);
            },
            complete: function () {

            }
        });
        return false;
    }

    function deleteSession(sid) {
        $.ajax({
            type: "DELETE",
            url: '/geo/session',
            dateType: 'json',
            data: {
                sid: sid
            },
            success: function (data, textStatus, jqXHR) {
                location.reload();
            },
            error: function (jqXHR, textStatus, errorThrown) {
                alert(errorThrown);
            },
            complete: function () {

            }
        });
        return false;
    }

    function createSession() {
        var txt = $('#session-name');
        var val = txt.val();
        if (val && val != "") {
            doApiCall('/geo/session', {
                name: val,
                appName: $('#session-app').val()
            });
        }
        return false;
    }

    function createApp() {
        var formData = new FormData();
        console.log($('#uploadFile')[0].files[0])
        formData.append('file', $('#uploadFile')[0].files[0]);

        $("#files").append(
            $('<div class="list-group-item">\
                    <div class="progress progress-striped active">\
                        <div class="progress-bar progress-bar-info" style="width: 0%;"></div>\
                    </div>\
                </div>'));
        $("#fileUploadError").addClass("hide");

        $.ajax({
            url: '/geo/app',
            type: 'POST',
            xhr: function () {
                var xhr = $.ajaxSettings.xhr();
                if (xhr.upload) {
                    xhr.upload.addEventListener('progress', function (evt) {
                        var percent = (evt.loaded / evt.total) * 100;
                        $("#files").find(".progress-bar").width(percent + "%");
                    }, false);
                }
                return xhr;
            },
            success: function (data) {
                $("#files").children().last().remove();
                $("#uploadFile").closest("form").trigger("reset");
            },
            error: function () {
                $("#fileUploadError").removeClass("hide").text("An error occured!");
                $("#files").children().last().remove();
                $("#uploadFile").closest("form").trigger("reset");
            },
            data: formData,
            cache: false,
            contentType: false,
            processData: false
        }, 'json');
    }

    function doApiCall(path, _data) {
        var res = $('#dvDemoResults');
        $.ajax({
            type: "POST",
            url: path,
            dateType: 'json',
            data: _data,
            success: function (data, textStatus, jqXHR) {
                res.html(JSON.stringify(data, null, 4));
                window.location = '/geo/actions?sid=' + data;
            },
            error: function (jqXHR, textStatus, errorThrown) {
                res.html(textStatus + ":" + errorThrown);
            },
            complete: function () {
                res.show()
            }
        });
    }
</script>

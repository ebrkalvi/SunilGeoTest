        <div class="row">
            <div class="col-sm-12 col-md-12 main">
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>App</th>
                                <th>Created At</th>
                                <th>...</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% sessions.forEach(function(session) { %>
                                <tr>
                                    <td>
                                        <a href="/geo/actions?out=html&sid=<%=session._id%>">
                                            <%=session.name%>
                                        </a>
                                        <% if(session.active) {%><span class="label  label-danger">Active</span>
                                            <% } %>
                                    </td>
                                    <td>
                                        <%= session.appName %>
                                    </td>
                                    <td>
                                        <%= session.createdAt %>
                                    </td>
                                    <td>
                                        <% if(!session.active) {%>
                                            <button onclick="return activateSession('<%=session._id%>')">Activate</button>
                                            <% } %>
                                                <button onclick="return deleteSession('<%=session._id%>')">Delete</button>
                                    </td>
                                </tr>
                                <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12 col-md-12 main">
                <h1 class="page-header">Sessions</h1>
                <button type="button" class="btn btn-info" data-toggle="modal" data-target="#myModal">New Session</button>
                <!-- Modal -->
                <div class="modal fade" id="myModal" role="dialog">
                    <div class="modal-dialog">

                        <!-- Modal content-->
                        <div class="modal-content">
                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal">&times;</button>
                                <h4 class="modal-title">New Session</h4>
                            </div>
                            <div class="modal-body">
                                <form>
                                    <div class="form-group">
                                        <label for="session-name" class="control-label">Name:</label>
                                        <input type="text" class="form-control" id="session-name">
                                    </div>
                                    <div class="form-group">
                                        <label for="session-app" class="control-label">App:</label>
                                        <input type="text" id="session-app" class="form-control" value="Jamba Juice" disabled/>
                                    </div>
                                </form>
                                <pre id="dvDemoResults" style="display: none; padding:4px; margin:2px;"></pre>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                                <button type="button" class="btn btn-primary" onclick="return createSession();">Start</button>
                            </div>
                        </div>

                    </div>
                </div>
                <button type="button" class="btn btn-info" data-toggle="modal" data-target="#myApp">New App</button>
                <!-- Modal -->
                <div class="modal fade" id="myApp" role="dialog">
                    <div class="modal-dialog">
                        <!-- Modal content-->
                        <div class="modal-content">
                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal">&times;</button>
                                <h4 class="modal-title">New App</h4>
                            </div>
                            <div class="modal-body">
                                <form>
                                    <div class="form-group">
                                        <label for="uploadFile" class="control-label">Choose apk or ipa file:</label>
                                        <input type="file" accept=".apk, .ipa" id="uploadFile" />
                                    </div>
                                </form>
                                <p id="fileUploadError" class="text-danger hide"></p>
                                <div class="list-group" id="files"></div>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                                <button type="button" class="btn btn-primary" onclick="return createApp();">Start</button>
                            </div>
                        </div>

                    </div>
                </div>
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>App</th>
                                <th>Created At</th>
                                <th>...</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% sessions.forEach(function(session) { %>
                                <tr>
                                    <td>
                                        <a href="/geo/actions?sid=<%=session._id%>">
                                            <%=session.name%>
                                        </a>
                                        <% if(session.active) {%><span class="label  label-danger">Active</span>
                                            <% } %>
                                    </td>
                                    <td>
                                        <%= session.appName %>
                                    </td>
                                    <td>
                                        <%= session.createdAt %>
                                    </td>
                                    <td>
                                        <% if(!session.active) {%>
                                            <button onclick="return activateSession('<%=session._id%>')">Activate</button>
                                            <% } %>
                                                <button onclick="return deleteSession('<%=session._id%>')">Delete</button>
                                    </td>
                                </tr>
                                <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>


    </div>

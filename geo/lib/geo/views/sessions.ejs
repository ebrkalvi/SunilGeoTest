<script>
    function createSession(app_id, script_id) {
        if (app_id && script_id) {
            doApiCall('/geo/app/'+app_id+'/script/'+script_id+'/session', {});
        }
        return false;
    }

    function doApiCall(path, _data) {
        var res = $('#ErrorDiv');
        res.addClass("hide");
        $.ajax({
            type: "POST",
            url: path,
            dateType: 'json',
            data: _data,
            success: function (data, textStatus, jqXHR) {
                res.html(JSON.stringify(data, null, 4));
                location.reload()
            },
            error: function (jqXHR, textStatus, errorThrown) {
                res.html(textStatus + ":" + errorThrown);
            },
            complete: function () {
                res.show()
            }
        });
    }
</script>
<ul class="nav nav-tabs">
    <li><a href="/geo">Sessions</a></li>
    <li class="active"><a href="/geo/app.html">Apps</a></li>
    <li><a href="/farms">Farms</a></li>
</ul>
<div class="container-fluid">
    <br/>
    <ol class="breadcrumb">
        <li><a href="/geo/app.html">Apps</a></li>
        <li><a href="/geo/app.html"><%=app.name%></a></li>
        <li><a href="/geo/app/<%=app._id%>/script.html">Scripts</a></li>
        <li><a href="/geo/app/<%=app._id%>/script.html"><%=script_name%></a></li>
        <li class="active">Sessions</li>
        <a href="#" class="pull-right" data-toggle="modal" data-target="#myApp">New Session</a>
    </ol>
    <!-- Modal -->
    <div class="modal fade" id="myApp" role="dialog">
        <div class="modal-dialog">
            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">New Session</h4>
                </div>
                <div class="modal-body">
                    <form>
                        <div class="form-group">
                            <b><%=app.name%></b> for <b><%=app.platform%></b> <br>
                            Script: <b><%=script_name%></b>
                        </div>
                    </form>
                    <p id="ErrorDiv" class="text-danger hide"></p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-primary" onclick="return createSession('<%=app._id%>', '<%=script_id%>');">Start</button>
                </div>
            </div>

        </div>
    </div>
    <div class="row">
        <div class="col-sm-12 col-md-12 main">
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Status</th>
                            <th>Ran At</th>
                            <th>...</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% sessions.forEach(function(session) { %>
                            <tr>
                                <td><%=session.status%></td>
                                <td><%=session.createdAt%></td>
                                <td>
                                    <button onclick="return deleteSession('<%=session._id%>')">Delete</button>
                                </td>
                            </tr>
                            <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>
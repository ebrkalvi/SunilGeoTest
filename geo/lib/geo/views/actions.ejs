<%
var timeDiff = function(operand1, operand2) {
    return Math.round((operand1 - operand2)*10000)/10;
}

var formatTS = function(ts) {
    var format = new Date(ts*1000);
    return format.toISOString();
}

var trimString = function(passedString, startstring, endstring) {
   var theString = passedString.substring(0, 80);
   return theString
};

var formatBytes = function(bytes) {
   if(bytes == 0) return '0 bytes';
   var sizes = [' bytes', ' KB', ' MB', ' GB'];
   var i = Math.floor(Math.log(bytes) / Math.log(1024));
   return parseFloat((bytes / Math.pow(1024, i)).toFixed(2)) + sizes[i];
}
%>
<div class="row">
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#">Geo Testing Tool</a>
            </div>
            <div id="navbar" class="navbar-collapse collapse">
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="#link">About   </a></li>
                </ul>
                <!-- form class="navbar-form navbar-right">
                    <input type="text" class="form-control" placeholder="Search...">
                </form -->
            </div>
        </div>
    </nav>

    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12 col-md-12 main">
                <h1 class="page-header"><%=session.name%> - <%=session.appName%></h1>
                <h4 class="sub-header pull-right"><%=session.createdAt%></h4>
                <div class="row placeholders">
                    <h4 class="sub-header">Excluded hosts:</h4>
                    <ul>
                        <%excludes.forEach(function(exclude){%>
                        <li><%=exclude%></li>
                        <%});%>
                    </ul>
                </div>
                <a class="btn btn-large btn-info" href="/geo">Sessions</a>
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Requested At</th>
                                <th>Action</th>
                                <th>URL</th>
                                <th>Request time (ms)</th>
                                <th>Execution time (ms)</th>
                                <th>Response time (ms)</th>
                                <th>Total time (ms)</th>
                                <th>Response size</th>
                            </tr>
                        </thead>
                        <tbody>
                            <%actions.forEach(function(action){%>
                            <tr>
                                <td><%=formatTS(action.request.timestamp_start)%></td>
                                <td><%=action.action%></td>
                                <td><b><%=action.request.host%></b><%=trimString(action.request.path)%></td>
                                <td><%=timeDiff(action.request.timestamp_end, action.request.timestamp_start)%></td>
                                <td><%=timeDiff(action.response.timestamp_start, action.request.timestamp_end)%></td>
                                <td><%=timeDiff(action.response.timestamp_end, action.response.timestamp_start)%></td>
                                <td><%=timeDiff(action.response.timestamp_end, action.request.timestamp_start)%></td>
                                <td><%=formatBytes(action.response.contentLength)%></td>
                            </tr>
                            <%});%>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>


</div>